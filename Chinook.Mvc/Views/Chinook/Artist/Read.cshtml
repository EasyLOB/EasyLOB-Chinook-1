@model ArtistItemModel

@{
    ViewBag.Title = AppHelper.PageTitle(ArtistResources.EntitySingular, PresentationResources.Read);
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        @Html.Partial("_ArtistItem", Model)
    </div>
    
    <div class="z-formButtons">
        @Html.Raw(@Html.ImageLink("Button_Cancel", MvcHelper.ReadUrlDictionary(Context, "Artist"), "z-buttonCancel", PresentationResources.Cancel))
    </div>
}

@Html.OperationResult(Model.OperationResult)

<script>
    $(function () {
        try {
            var model = function () { return @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)); }();

            if (model.IsSecurityOperations.IsRead) {
                $("#Button_Cancel").show();
            }
            else {
                $("#Button_Cancel").show();
            }
        } catch (exception) {
            zExceptionMessage("Artist Read.cshtml", "function", exception.message)
        }
    });
</script>